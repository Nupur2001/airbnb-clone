<% layout("/layouts/boilerplate") %>

    <body>
        <h3>All Listings</h3>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <%for(let listing of allListings){%>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card col">
                        <img src="<%= listing.image.url %>" style="height: 20rem;" alt="<%= listing.title %>">
                        <!-- <div class="card-img-overlay">Aishkero</div> -->
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %> <br>
                                </b>
                            <p> &#8377; <%= listing.price %>/ night</p>


                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>




